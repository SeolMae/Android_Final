<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/post_list_userImg"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:id="@+id/post_list_userName"
            android:text="양시연"
            android:layout_toRightOf="@+id/post_list_userImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/post_list_Date"
            android:layout_alignLeft="@+id/post_list_userName"
            android:layout_below="@+id/post_list_userName"
            android:text="2018.08.30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:textColor="#000000"
        android:id="@+id/post_list_postName"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_margin="10dp"
        android:text="밥한술 문짝 달고 왔습니다!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/post_list_postContent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="오늘은 중구 필동에 봉사활동을 다녀왔습니다. 밥한술 이모님도 뵙고 좋은 시간이었는데요..."
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginBottom="15dp"
        android:id="@+id/post_list_postImg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#707070"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>
