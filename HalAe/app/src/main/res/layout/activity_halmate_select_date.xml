<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        android:paddingLeft="16dp"
        android:paddingTop="13dp"
        android:paddingRight="16dp"
        android:paddingBottom="11dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/schedule_select_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23일"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#606060"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목요일"
                android:textColor="#606060"
                android:textSize="13dp"
                android:layout_marginBottom="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#707070"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/schedule_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="46dp"></android.support.v7.widget.RecyclerView>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/schedule_add_btn">

            <ImageView
                android:src="@drawable/halmate_schedule_add"
                android:id="@+id/schedule_select_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>