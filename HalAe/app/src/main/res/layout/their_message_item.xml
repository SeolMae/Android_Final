<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/their_message_profile"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/their_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신예지"
            android:textSize="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/their_message_profile"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/their_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/their_message"
                android:text="안녕!!!ㅋㅋㅋㅋㅋㅋ"
                android:textSize="12dp"
                android:textColor="#000000"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/their_message_time"
                android:layout_toRightOf="@id/their_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오전 11:06"
                android:textSize="9dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@id/their_message_text"

                />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>