<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <TextView
        android:id="@+id/their_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ㅋㅋㅋㅋㅋ안녕하세요"
        android:textSize="12dp"
        android:textColor="#000000"
        android:background="@drawable/their_message"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/their_message_time"
        android:layout_toRightOf="@id/their_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오전 11:06"
        android:textSize="9dp"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@id/their_message_text"

        />

</RelativeLayout>