<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="105dp">

    <ImageView
        android:id="@+id/halmate_board_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/halmate_board_title"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="제목 들어가는 곳임
title이요"
        android:textSize="16dp"
        android:textColor="#606060"
        android:layout_toRightOf="@+id/halmate_board_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/halmate_board_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018.08.08"
        android:textSize="14dp"
        android:textColor="#B0B0B0"
        android:layout_toRightOf="@+id/halmate_board_image"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/halmate_board_title"
        android:layout_marginTop="3dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#707070"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>