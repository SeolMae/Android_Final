<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#ffffff"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/vol_date"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="12dp"
        android:textColor="#606060"
        android:text="08.21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/vol_halmate"
        android:textColor="#606060"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:text="최고운 할머니"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toLeftOf="@+id/vol_addtime"
            android:text="+"
            android:textSize="16dp"
            android:textColor="#606060"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/vol_addtime"
            android:layout_toLeftOf="@+id/time"
            android:text="3"
            android:textSize="16dp"
            android:textColor="#606060"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="시간"
            android:textSize="16dp"
            android:textColor="#606060"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vol_totaltime"
            android:layout_below="@+id/vol_addtime"
            android:layout_toLeftOf="@+id/time2"
            android:text="196"
            android:textSize="12dp"
            android:textColor="#606060"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time2"
            android:layout_below="@+id/vol_addtime"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="시간"
            android:textSize="12dp"
            android:textColor="#606060"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
