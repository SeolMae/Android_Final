<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    //타이틀바
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우리 할메이트"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:visibility="invisible"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/board_detail_comment"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"/>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#B8B8B8"></View>

    //할메이트 프로필
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        //프로필사진
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="12dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sample"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최고운 할머니, "
                android:textSize="16dp"
                android:textColor="#161616"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#161616"
                android:textStyle="bold"
                android:text="64세"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/halmate_add"
                    android:src="@drawable/halmate_person"
                    />

                <TextView
                    android:id="@+id/halmate_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#606060"
                    android:textSize="12dp"
                    android:text="서울특별시 중구 광희동 충무로5가 36-2"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/halmate_interest_icon"
                        android:layout_marginRight="5dp"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/search_detail_heart"/>
                    <TextView
                        android:layout_toRightOf="@+id/halmate_interest_icon"
                        android:id="@+id/halmate_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="그림, 노래 , 드라마"
                        android:textSize="12dp"
                        android:textColor="#606060"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/halmate_info_icon"
                        android:layout_marginRight="5dp"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/search_detail_info"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/halmate_info"
                        android:layout_toRightOf="@+id/halmate_info_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가끔 너무 신나요!"
                        android:textSize="12dp"
                        android:textColor="#606060"/>


                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10.5dp"
        android:layout_marginRight="9.5dp"
        android:layout_height="0.2dp"
        android:background="#707070"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp">

        <TextView
            android:id="@+id/volunteer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="봉사지들 (6)"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/volunteer_list"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="11dp"
        android:orientation="horizontal">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10.5dp"
        android:layout_marginRight="9.5dp"
        android:layout_marginTop="12dp"
        android:layout_height="0.2dp"
        android:background="#707070"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="함께 한 활동(3)"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_list"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="7dp"
        android:orientation="horizontal">

    </android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#9CE3FF"
            android:text="함께하기"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFFAFA"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>



</LinearLayout>