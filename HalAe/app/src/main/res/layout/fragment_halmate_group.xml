                    android:visibility="invisible"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="30dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/halmate_group_person"/>

                    <ImageView
                        android:layout_width="27.45dp"
                        android:layout_height="27.45dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/halmate_group_on"/>

                </RelativeLayout>


            </GridLayout>
            <ImageView
                android:layout_width="42.26dp"
                android:layout_height="42.27dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/halmate_group_crown"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>