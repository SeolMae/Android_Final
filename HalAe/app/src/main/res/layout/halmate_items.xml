<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:elevation="5dp"
        android:id="@+id/main_Halmoney"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:layout_marginLeft="20dp"
        android:layout_width="322dp"
        android:layout_height="197dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_HalIMG"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <TextView
            android:id="@+id/main_HalName"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/main_HalIMG"
            android:textSize="20dp"
            android:text="박막례 할머니"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#606060"
            android:id="@+id/main_HalDD"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/main_HalIMG"
            android:textSize="15dp"
            android:text="만난지 51일"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_marginLeft="20dp"
            android:src="@drawable/main_massage"
            android:background="@android:color/transparent"
            android:id="@+id/main_HalCall"
            android:layout_toRightOf="@id/main_HalIMG"
            android:layout_below="@+id/main_HalDD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:src="@drawable/main_call"
            android:background="@android:color/transparent"
            android:id="@+id/main_HalMsg"
            android:layout_toRightOf="@id/main_HalCall"
            android:layout_below="@+id/main_HalDD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
