<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/schedule_item"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="260dp"
    android:layout_height="60dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp">

        <View
            android:id="@+id/schedule_item_mark"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="#9CE3FF"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/schedule_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양시연"
            android:textSize="16dp"
            android:textColor="#606060"
            android:layout_toRightOf="@+id/schedule_item_mark"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/schedule_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:text="오후 3:00 - 오후 6:00"
        android:textSize="12dp"
        android:textColor="#B0B0B0"/>

</LinearLayout>