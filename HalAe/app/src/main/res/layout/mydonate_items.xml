<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#ffffff"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mydonate_title"
            android:textSize="13dp"
            android:text="맥북이 필요해요"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/mydonate_halmate"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/mydonate_title"
            android:text="최고운 할머니"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="90dp"
        android:layout_gravity="center"
        android:id="@+id/mydonate_howmuch"
        android:text="30,000"
        android:textColor="#9ce3ff"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="center"
        android:text="원"
        android:textColor="#606060"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="50dp"
        android:layout_gravity="center"
        android:id="@+id/mydonate_date"
        android:text="2018.07.18"
        android:textColor="#606060"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
