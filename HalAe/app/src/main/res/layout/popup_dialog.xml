<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/popup_title"
            android:gravity="center"
            android:text="봉사 인증하기"
            android:textSize="16dp"
            android:textColor="#606060"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageButton
            android:padding="15dp"
            android:background="#ffffff"
            android:layout_alignRight="@+id/popup_title"
            android:id="@+id/popup_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/popup_guide"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/popup_title"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            android:textColor="#606060"
            android:text="인증번호를 입력하세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginLeft="70dp"
            android:id="@+id/num_1"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:background="@null"
            android:textSize="40dp"
            android:layout_below="@+id/popup_guide"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="30dp"
            android:background="#707070"
            android:layout_below="@+id/num_1"
            android:layout_width="30dp"
            android:layout_height="2dp"/>


        <EditText
            android:layout_toRightOf="@+id/num_1"
            android:layout_marginLeft="15dp"
            android:id="@+id/num_2"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:background="@null"
            android:textSize="40dp"
            android:layout_below="@+id/popup_guide"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_toRightOf="@+id/num_1"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"
            android:background="#707070"
            android:layout_below="@+id/num_2"
            android:layout_width="30dp"
            android:layout_height="2dp"/>

        <EditText
            android:layout_toRightOf="@+id/num_2"
            android:layout_marginLeft="15dp"
            android:id="@+id/num_3"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:background="@null"
            android:textSize="40dp"
            android:layout_below="@+id/popup_guide"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_toRightOf="@+id/num_2"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"
            android:background="#707070"
            android:layout_below="@+id/num_3"
            android:layout_width="30dp"
            android:layout_height="2dp"/>

        <EditText
            android:layout_toRightOf="@+id/num_3"
            android:layout_marginLeft="15dp"
            android:id="@+id/num_4"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:background="@null"
            android:textSize="40dp"
            android:layout_below="@+id/popup_guide"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_toRightOf="@+id/num_3"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"
            android:background="#707070"
            android:layout_below="@+id/num_4"
            android:layout_width="30dp"
            android:layout_height="2dp"/>

        <Button
            android:layout_marginTop="30dp"
            android:layout_below="@id/num_4"
            android:id="@+id/popup_ok"
            android:text="확인"
            android:textColor="#606060"
            android:textSize="16dp"
            android:background="#9ce3ff"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

    </RelativeLayout>
</RelativeLayout>
